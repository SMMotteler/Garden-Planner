<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/llBackground">

    <ImageView
        android:id="@+id/ivPlantPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@drawable/default_pic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="plantName" />

        <TextView
            android:id="@+id/tvStartAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="start as seeds" />

        <TextView
            android:id="@+id/tvWhenPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="plant in 1 week" />

        <TextView
            android:id="@+id/tvWhenHarvest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="harvest in 3 days" />
    </LinearLayout>
</LinearLayout>